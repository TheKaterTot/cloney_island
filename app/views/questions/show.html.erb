<h2>Question</h2>

<div class="row">
  <div class="col s12 m12">
    <div class="card-panel white">
      <span class="black-text">
        <div id="question-title" >
          <h5><%= @question.title %><br></h5>
        </div>
        <div id="question-body" >
          <%= @question.body %><br>
        </div>
        <%= @question.updated_at %><br>
      </span>
      <div class="right col s12 m12">
        <div class="card-panel">
          <span class="blue-text">
            <% @question.comments.each do |comment| %>
              <%= comment.body %><br>
            <% end %>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

<h4><%= @question.answer_count %> Answers</h4>
<div class="row">
  <div class="question-answers">
    <% @question.answers.each do |answer| %>
      <div class="question-answer">
        <div class="col s12 m12">
          <div class="card-panel white">
            <span class="black-text">
              <h5>Answer</h5>
              <%= answer.body %><br>
            </span>
            <div class="right col s12 m12">
              <div class="card-panel">
                <span class="blue-text">
                  <% answer.comments.each do |comment| %>
                    <%= comment.body %><br><br><br>
                  <% end %>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= form_for [@question, @answer], url: { controller: "answers", action: "create" } do |f| %>
  <%= f.hidden_field :question, :value => params[:id] %>
  <%= f.text_area :body, placeholder: "Enter text" %>
  <%= f.submit "Submit" %>
  <% end %>
</div>
