<div class="row">
  <div class="col s12 m12">
    <div class="card-panel blue lighten-5">
      <span class="center black-text">
        <h4>Update Your Password</h4><br>
        <%= form_tag(url: edit_password_path, method: :put) do %>
            <%= label_tag :token, "Token" %>
            <%= text_field_tag :token %>
            <%= label_tag :password, "New Password" %>
            <%= password_field_tag :password %>
            <%= label_tag :password_confirmation, "Password Confirmation" %>
            <%= password_field_tag :password_confirmation %>
            <%= submit_tag "Save", class: "waves-effect blue darken-1 waves-light btn-large" %>
            <%= link_to "Cancel", user_path(current_user), class: "waves-effect red darken-1 waves-light btn-large" %>
        <% end %>
      </span>
    </div>
  </div>
</div>
