<div class="row">
  <div class="col s12 m12">
    <div class="card-panel blue lighten-5">
      <span class="center black-text">
        <h4>Create Your Account</h4><br>
        <%= form_for(@user) do |f| %>
            <%=  f.label :name %>
            <%=  f.text_field :name%>
            <%=  f.label :email %>
            <%=  f.email_field :email %>
            <%=  f.label :phone %>
            <%=  f.telephone_field :phone %>
            <%=  f.label :password %>
            <%=  f.password_field :password %>
            <%=  f.label :password_confirmation %>
            <%=  f.password_field :password_confirmation %>
            <%= f.submit "Create Account", class: "waves-effect blue darken-1 waves-light btn-large" %>
        <% end %>
      </span>
    </div>
  </div>
</div>
