<div class="row">
  <div class="col s12 m12">
    <div class="card-panel blue lighten-5">
      <span class="center black-text">
        <h4>Update Your Account</h4><br>
        <%= form_for(current_user) do |f| %>
            <%=  f.label :email %>
            <%=  f.email_field :email %>
            <%= show_errors(current_user, :email) %>
            <%=  f.label :phone %>
            <%=  f.telephone_field :phone %>
            <%= show_errors(current_user, :phone) %>
            <%= f.submit "Save", class: "waves-effect blue darken-1 waves-light btn-large" %>
            <%= link_to "Cancel", user_path(current_user), class: "waves-effect red darken-1 waves-light btn-large" %>
        <% end %>
      </span>
    </div>
  </div>
</div>
